# ==========================================================
# üåü MindSpark Environment Configuration
# ==========================================================
# Copy this file to `.env` and replace placeholder values.
# DO NOT commit your real `.env` file to version control.
# ==========================================================


# ----------------------------------------------------------
# üîê Application Settings
# ----------------------------------------------------------
APP_NAME=MindSpark
APP_ENV=development
APP_DEBUG=True
APP_PORT=8000
FRONTEND_URL=http://localhost:3000


# ----------------------------------------------------------
# üîë Security
# ----------------------------------------------------------
SECRET_KEY=your-super-secret-key
JWT_SECRET=your-jwt-secret-key
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60


# ----------------------------------------------------------
# üóÑ Database Configuration
# ----------------------------------------------------------
DATABASE_URL=sqlite:///./mindspark.db
# Example for PostgreSQL:
# DATABASE_URL=postgresql://user:password@localhost:5432/mindspark


# ----------------------------------------------------------
# ü§ñ AI / Machine Learning Settings
# ----------------------------------------------------------
AI_MODEL_NAME=mindspark-personalization-v1
AI_DIFFICULTY_THRESHOLD=0.75
AI_CURIOSITY_WEIGHT=0.6
AI_RECOMMENDATION_LIMIT=5


# ----------------------------------------------------------
# üìä Analytics & Monitoring
# ----------------------------------------------------------
ENABLE_ANALYTICS=True
LOG_LEVEL=INFO


# ----------------------------------------------------------
# üåç Accessibility & Localization
# ----------------------------------------------------------
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,es,fr,hi
ENABLE_INCLUSIVE_MODE=True


# ----------------------------------------------------------
# üì¶ External Services (Optional)
# ----------------------------------------------------------
# OpenAI or other LLM provider (if used)
OPENAI_API_KEY=your-openai-api-key

# Email Service (for teacher reports)
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_USER=your-email@example.com
EMAIL_PASSWORD=your-email-password


# ----------------------------------------------------------
# üê≥ Docker / Deployment
# ----------------------------------------------------------
DOCKER_ENV=False
